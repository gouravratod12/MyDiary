
<div class="col-lg-12">
<%= flash[:notice] %>
<div class="card rounded-0 mt-5">
  <div class="card-body ">
    <h2 class="text-center">Listing Customers</h2>
  </div>
</div>
<%= link_to "Create New Customer", new_customer_path, class: "btn btn-primary btn-lg mt-3 mb-3 rounded-0" %>

<table class="table table-bordered ">
  <thead >
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Date of joined</th>
      <th>Contacts</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.customer_name%></td>

        <td><%= customer.customer_address%></td>

        <td><%= customer.customer_dateofjoining%></td>

        <td><%= customer.customer_contact%></td>

        <td>
        <div class="dropdown">
         <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Actions
         </button>
         <ul class="dropdown-menu">
          <li><%= link_to "Edit" , edit_customer_path(customer), class: "dropdown-item"%></li>
          <li><%= link_to "View" , customer_path(customer), class: "dropdown-item"%></li>
          <li><%= link_to "Delete", customer_path(customer), class: "dropdown-item", method: :delete, data: { confirm: 'Are you sure to delete this customer?' } %></li>
        </ul>
       </div>

        </td>
      </tr>
    <%end%>
  </tbody>
</table>
</div>
