

<div class="col-lg-12">
<div class="card rounded-0 mt-5">
  <div class="card-body ">
    <h2 class="text-center">Bill Details</h2>
  </div>
</div>

      <div class="col-lg-4 mt-3">
        <div class="form-group">
         <p class="lead"><strong>Bill Date : </strong><%= @bill.bill_date%>

        </div>
      </div>


    <div class="row">
      <div class="col-lg-4">
        <div class="form-group">
          <p class="lead"><strong>Customer Name  : </strong><%= @bill.customer.customer_name%></p>
        </div>
      </div>
    </div>

     <div class="row">
  <div class="col-lg-12">
    <table class="table">
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Weight</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% @bill.items.each do |item| %>
          <tr>
            <td><%= item.product.product_name %></td>
            <td><%= item.item_weight %></td>
            <td><%= item.amount %> rs</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

    <div class="row">
      <div class="col-lg-12 mb-4">

        <%= link_to "Back to Bills", bills_path, class: "btn btn-outline-primary btn-lg mt-3 mb-3 rounded-0" %>
         <span style="padding-left: 10px;"> </span>
        <%= link_to "Edit Bill", edit_bill_path, class: "btn btn-primary btn-lg mt-3 mb-3 rounded-0" %>
         <span style="padding-left: 500px;"> </span>
       <%= link_to "Download", bill_path(@bill, format: :pdf), class: "btn btn-outline-danger btn-lg mt-3 mb-3 rounded-0" %>
      </div>
    </div>
  </div>


</div>
</div>