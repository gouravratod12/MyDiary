 <%= form_for seller do |form| %>
    <div class="row">

       <% if @seller.errors.any? %>
          <div class="col-lg-12">
            <p class="lead">Please fix errors below</p>
          </div>
      <%end%>
      <div class="col-lg-4">
        <div class="form-group">
           <%= form.label :seller_name, class: 'mb-2' %>
           <%= form.text_field :seller_name, class: 'form-control form-control-lg rounded-0' %>
           <% @seller.errors.full_messages_for(:seller_name).each do|message| %>
           <p class="text-danger"><%=message%></p>
           <%end%>
        </div>
      </div>
   </div>
     <br>
    <div class="row">
      <div class="col-lg-4">
        <div class="form-group">
           <%= form.label :seller_address, class: 'mb-2' %>
           <%= form.text_field :seller_address, class: 'form-control form-control-lg rounded-0' %>
           <% @seller.errors.full_messages_for(:seller_address).each do|message| %>
           <p class="text-danger"><%=message%></p>
          <%end%>
        </div>
      </div>
    </div>
      <br>
    <div class="row">
      <div class="col-lg-3">
        <div class="form-group">
           <%= form.label :Date, class: 'mb-2' %>
           <%= form.date_field :seller_date, class: 'form-control form-control-lg rounded-0' %>
           <% @seller.errors.full_messages_for(:seller_date).each do|message| %>
           <p class="text-danger"><%=message%></p>
          <%end%>
        </div>
      </div>
    </div>
     <br>
    <div class="row">
      <div class="col-lg-3">
        <div class="form-group">
           <%= form.label :seller_contact, class: 'mb-2' %>
           <%= form.text_field :seller_contact, class: 'form-control form-control-lg rounded-0 mb-5',type: 'number' %>
           <% @seller.errors.full_messages_for(:seller_contact).each do|message| %>
           <p class="text-danger"><%=message%></p>
           <%end%>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 mb-4">

        <%= form.submit class: 'btn btn-primary rounded-0 btn-lg'%>
        <%= link_to "Back to Customer", sellers_path, class: "btn btn-outline-primary btn-lg mt-3 mb-3 rounded-0" %>
      </div>
    </div>
  </div>
  <%end%>