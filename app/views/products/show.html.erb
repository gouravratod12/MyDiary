<div class="col-lg-12">
<div class="card rounded-0 mt-5">
  <div class="card-body ">
    <h2 class="text-center">Product Detail</h2>
  </div>


      <div class="col-lg-4">
        <div class="form-group">
         <p class="lead"><strong>Product Name:</strong><%= @product.product_name%>

        </div>
      </div>

     <br>
    <div class="row">
      <div class="col-lg-4">
        <div class="form-group">
          <p class="lead"><strong>Product Rate:</strong><%= @product.product_weight%>

        </div>
      </div>
    </div>
      <br>

    <div class="row">
      <div class="col-lg-12 mb-4">

        <%= link_to "Back to Product", products_path, class: "btn btn-outline-primary btn-lg mt-3 mb-3 rounded-0" %>
        <%= link_to "Edit Product", edit_product_path, class: "btn btn-primary btn-lg mt-3 mb-3 rounded-0" %>

      </div>
    </div>
  </div>

</div>
</div>